PORT=8787
NODE_ENV=development

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Email delivery
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=example_user
SMTP_PASS=example_password
MAIL_FROM="Red Mugsy Contact <no-reply@example.com>"
MAIL_TO=support@example.com

# Human verification (optional)
# If set, backend verifies Cloudflare Turnstile tokens sent as cfTurnstileToken
TURNSTILE_SECRET=

# Enable admin UI (served at /admin) only when explicitly true
# In production, keep this false unless you intend to expose the portal.
ADMIN_UI_ENABLED=false
