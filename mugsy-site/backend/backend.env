PROMOTER_PORTAL_URL=http://localhost:5173
PROMOTER_SIGNIN_URL=http://localhost:5173/#/treasure-hunt/promoter-signin
PROMOTER_RESET_URL=http://localhost:5173/#/treasure-hunt/promoter-reset
API_BASE_URL=http://localhost:3001

# Admin Configuration
ADMIN_EMAIL=admin@redmugsy.com
